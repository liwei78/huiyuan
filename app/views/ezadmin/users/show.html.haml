.banner
  .layout
    .title
      查看
- unless flash[:notice].nil?
  .noticediv
    .layout
      = flash[:notice]

.layout
  %table.styled
    %tbody
      %tr
        %td{:width => "20%"}
          登录账号
        %td
          = @user.login
      %tr
        %td
          名称
        %td
          = @user.name
      %tr
        %td
          创建日期
        %td
          = @user.created_at.strftime("%Y-%m-%d")
    %tfoot
      %tr
        %td{:colspan => 2}
          .right
            = link_to "删除", ezadmin_user_url(@user), :title => "删除", :method => "delete", :confirm => "点击确定继续"
          = link_to "编辑", edit_ezadmin_user_url(@user)
          
