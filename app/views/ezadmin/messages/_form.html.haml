= form_for(message, :url=>(message.new_record? ? ezadmin_messages_url : ezadmin_message_url(message))) do |f|
  %table.styled
    %tbody
      %tr
        %td
          标题
        %td
          = f.text_field :title, :class => "input"
      %tr
        %td
          内容
        %td
          = f.text_area :content, :class => "input"
      %tr
        %td
          
        %td
          - unless message.new_record?
            .right
              = link_to "删除", ezadmin_message_url(message), :title => "删除", :method => "delete", :confirm => "点击确定继续"
          = submit_tag("确定", :class => "submit")
            
          
            
          