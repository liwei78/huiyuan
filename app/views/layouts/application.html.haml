!!!
%html(xmlns="http://www.w3.org/1999/xhtml")
  %head
    %title= site_title
    %meta{'http-equiv' => "content-type", :content => "text/html; charset=UTF-8"}
    = stylesheet_link_tag :application
    = javascript_include_tag :application
    = csrf_meta_tag
    = yield :header
  %body
    .header
      .wrapper
        .login
          - if loggin?
            您好，
            = @user.name
            - if @user.has_unread?
              ，
              %span.green
                您有
                = @user.unread_count
                条未读信息
            [
            = link_to "退出", logout_url
            ]
          - else
            = link_to "登录", login_url
        - if flash[:notice].present?
          .notice
            = flash[:notice]
    .content
      .wrapper
        = yield
    .footer
      .wrapper
        &copy; 2012
        = site_title
        