!!!
%html(xmlns="http://www.w3.org/1999/xhtml")
  %head
    %title= site_title
    %meta{'http-equiv' => "content-type", :content => "text/html; charset=UTF-8"}
    = stylesheet_link_tag :admin
    = javascript_include_tag :application
    = csrf_meta_tag
    = yield :header
  %body
    .header
      .login-layout.login-height
        .logo
          = image_tag("adminlogo.png")
    .mainbox
      - unless flash[:error].nil?
        .noticediv
          .login-layout
            = flash[:error]
      .login-layout
        .login-form
          = form_tag(ezadmin_checklogin_url) do
            %table{:width => "100%", :cellpadding => 6, :cellspacing => 6}
              %tr
                %td{:width => "80px"}
                  管理账号
                %td
                  = text_field_tag(:account, "", :class => "input")
              %tr
                %td
                  管理密码
                %td
                  = password_field_tag(:password, "", :class => "input")
              %tr
                %td
                  
                %td
                  =submit_tag("登录", :class => "btn")
              
    .footer
      &copy 2012
      = site_title