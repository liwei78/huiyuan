!!!
%html(xmlns="http://www.w3.org/1999/xhtml")
  %head
    %title= site_title
    %meta{'http-equiv' => "content-type", :content => "text/html; charset=UTF-8"}
    = stylesheet_link_tag :admin
    = javascript_include_tag :application
    = csrf_meta_tag
    = yield :header
  %body
    .header
      .layout
        .topnav
          .right
            = link_to "退出", logout_url
        .logo
          = image_tag("adminlogo.png")
        .nav
          %ul
            %li
              = link_to "管理首页", root_url, :class => admin_nav?("index")
            %li
              = link_to "用户管理", users_url, :class => admin_nav?("users")
            %li
              = link_to "信息管理", articles_url(:is_article => true), :class => admin_nav?("articles")
            .clearfix
    .mainbox
      = yield
    .h20
    .footer
      &copy 2012
      = site_title